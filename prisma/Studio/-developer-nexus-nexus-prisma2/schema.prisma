generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/db_nexus_prisma2?schema=public"
}

model User {
  email String  @unique
  id    Int     @default(autoincrement()) @id
  name  String?
  phone Phone
  posts Post[]
  role Role @default(USER)
}

model Post {
  authorId  Int?
  content   String?
  id        Int     @default(autoincrement()) @id
  published Boolean @default(false)
  title     String
  author    User?   @relation(fields: [authorId], references: [id])
}

model Phone {
  id          Int @default(autoincrement()) @id
  number      String? @unique
  description String
  userId      Int?
  owner       User?   @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}
{
  "name": "typescript-graphql",
  "scripts": {
    "prestart": "npx prisma generate",
    "start": "ts-node-dev --no-notify --respawn --transpileOnly src/index.ts",
    "start2": "nodemon -e ts,prisma src/index.ts",
    "watch:prisma": "onchange 'prisma/schema.prisma' -- npm start"
  },
  "dependencies": {
    "@nexus/schema": "0.14.0",
    "@prisma/client": "2.3.0",
    "dotenv": "^8.2.0",
    "graphql": "15.3.0",
    "graphql-yoga": "1.18.3",
    "nexus-prisma": "0.13.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@prisma/cli": "2.3.0",
    "@types/node": "12.12.50",
    "@types/ws": "7.2.6",
    "ts-node": "8.10.2",
    "ts-node-dev": "1.0.0-pre.50",
    "typescript": "3.9.6",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "nodemon": "^2.0.3"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "engines": {
    "node": ">=10.0.0"
  }
